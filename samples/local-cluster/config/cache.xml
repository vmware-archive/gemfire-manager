<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE cache PUBLIC  "-//GemStone Systems, Inc.//GemFire Declarative Caching 8.0//EN" "http://www.gemstone.com/dtd/cache8_0.dtd">
<cache>
	<gateway-sender id="test_parallel"
		remote-distributed-system-id="${REMOTE_DISTRIBUTED_SYSTEM_ID}"
		parallel="true" enable-persistence="true" disk-store-name="gateway_queue_store" />
		
    <gateway-receiver start-port="${GATEWAY_RECEIVER_START_PORT}" end-port="${GATEWAY_RECEIVER_END_PORT}"/>

	<disk-store name="gateway_queue_store">
		<disk-dirs>
			<disk-dir>data-gateway-queue</disk-dir>
		</disk-dirs>
	</disk-store>
	<disk-store name="pdx_store">
		<disk-dirs>
			<disk-dir>data-pdx</disk-dir>
		</disk-dirs>
	</disk-store>
	<disk-store name="data_store">
		<disk-dirs>
			<disk-dir>data</disk-dir>
		</disk-dirs>
	</disk-store>

	<pdx read-serialized="true" persistent="true" disk-store-name="pdx_store">
		<pdx-serializer>
			<class-name>com.gemstone.gemfire.pdx.ReflectionBasedAutoSerializer</class-name>
		</pdx-serializer>
	</pdx>

	<region name="Test">
		<region-attributes refid="PARTITION_REDUNDANT_PERSISTENT_OVERFLOW" disk-store-name="data_store" >
			<eviction-attributes>
				<lru-heap-percentage action="overflow-to-disk"/>
			</eviction-attributes>
		</region-attributes>
	</region>
	
	<resource-manager critical-heap-percentage="95" eviction-heap-percentage="90"/>
</cache>
